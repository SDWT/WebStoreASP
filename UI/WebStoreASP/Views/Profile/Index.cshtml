@{
    Layout = "_LayoutProfile";
    ViewData["Title"] = "Профиль | "+Model.Name;
}
@model ProfileViewModel

    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="login-form">
                <!--login form-->
                <h2>Измените ваш пароль</h2>
                <form asp-controller="Profile" asp-action="SaveChangesAsync" asp-antiforgery="true" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group">
                        <input readonly asp-for="Name"/>
                    </div>

                    <div class="form-group">
                        <input asp-for="Password" placeholder="пароль" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Сохранить</button>
                </form>
            </div><!--/login form-->
        </div>
    </div>