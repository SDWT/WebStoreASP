@model IEnumerable<WebStoreASP.ViewModels.EmployeeView>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetEmployees</title>
</head>
<body>
    <h1>Список сотрудников</h1>
    <table>
        <thead>
            <tr>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>id</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td><a href="/employee/GetEmployeeDetails/@employee.Id">Подробнее</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
