@{
    Layout = "_LayoutProfile";
    ViewData["Title"] = "Заказы";
}
@model IEnumerable<UserOrderViewModel>

    <table class="table">
        <thead>
            <tr>
                <th>№</th>
                <th>Имя</th>
                <th>Адрес</th>
                <th>Телефон</th>
                <th>Сумма заказа</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.TotalSum.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>